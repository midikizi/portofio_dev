<section class="relative min-h-screen pt-32 pb-20 px-4 lg:px-8 bg-gradient-to-br from-gray-900/95 via-purple-900/90 to-gray-900/95 overflow-hidden">
  <!-- Animated background with code lines -->
  <div class="absolute inset-0 overflow-hidden opacity-10">
    <div class="code-rain"></div>
  </div>


  <div class="container mx-auto max-w-[1400px] relative z-10">
    <div class="grid lg:grid-cols-[1fr,2fr] gap-12 items-center">
      <!-- Photo de profil -->
      <div class="relative mx-auto lg:mx-0">
        <div class="absolute inset-0 bg-gradient-to-br from-purple-500/20 to-purple-900/30 rounded-full blur-xl transform animate-pulse"></div>
        <div class="relative">
          <div class="w-64 h-64 lg:w-80 lg:h-80 absolute inset-0 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full blur-md animate-pulse"></div>
          <img 
            src="/images/profife.jpg"
            alt="Essodéké Iréné MIDIKIZI"
            class="w-64 h-64 lg:w-80 lg:h-80 rounded-full object-cover border-4 border-purple-500/50 shadow-lg relative transform transition-transform duration-500 hover:scale-105"
          />
        </div>
      </div>

      <!-- Contenu textuel -->
      <div class="text-left lg:pr-12">
        <h1 class="text-4xl lg:text-7xl font-bold text-white mb-8 animate-fade-in leading-tight">
          Développeur d'Applications
        </h1>
        <p class="text-xl lg:text-2xl text-gray-300 mb-10 animate-fade-in-delay leading-relaxed">
          Passionné par le développement logiciel avec une expertise en Java, JavaScript et Python.
          Actuellement en stage à la Direction Générale de la Société des Postes du Togo.
        </p>
        <div class="flex gap-6 animate-fade-in-delay-2">
          <a
            href="#contact"
            class="bg-purple-600 text-white px-8 py-4 rounded-xl hover:bg-purple-700 transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-purple-500/20 font-medium text-lg"
          >
            Me contacter
          </a>
          <a
            href="#projects"
            class="bg-gray-800/50 text-gray-100 px-8 py-4 rounded-xl hover:bg-gray-800/70 transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-purple-500/20 border border-purple-500/20 font-medium text-lg"
          >
            Voir mes projets
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .animate-fade-in-delay {
    animation: fadeIn 0.5s ease-in-out 0.2s both;
  }

  .animate-fade-in-delay-2 {
    animation: fadeIn 0.5s ease-in-out 0.4s both;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .badge-container {
    position: relative;
    display: inline-block;
  }

  .badge-glow {
    position: absolute;
    inset: -8px;
    background: radial-gradient(circle at center, rgba(139, 92, 246, 0.3), transparent 70%);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.2;
    }
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
  }

  .code-rain {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      linear-gradient(90deg, 
        transparent 0%,
        rgba(139, 92, 246, 0.1) 50%,
        transparent 100%
      );
    background-size: 200% 100%;
    animation: rain 20s linear infinite;
  }

  @keyframes rain {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 200% 0%;
    }
  }

  /* Ajout d'un effet de scintillement sur le texte */
  h1 {
    background: linear-gradient(
      90deg,
      #fff 0%,
      #e9d5ff 50%,
      #fff 100%
    );
    background-size: 200% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: shine 5s linear infinite;
  }

  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }
</style>